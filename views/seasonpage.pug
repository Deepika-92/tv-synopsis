html
    head
        link(rel="stylesheet", href="/css/stylesheet.css")
        title Tv Synopsis            
    body
        h1= title
            h2(class="season")= `Season ${season.number}`
            table
                tr(class="headings")
                    th(class="no") No.
                    th(class="title") Title
                    th(class="dir") Director
                each episode in season.episodes            
                        tr
                            td(class="number")= episode.number
                            td= episode.title
                            td= episode.director
                        tr
                            td(colspan="3;")= episode.synopsis